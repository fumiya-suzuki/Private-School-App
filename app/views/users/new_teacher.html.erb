<% provide(:title, 'Sign up') %>
<% provide(:class_text, 'signup') %>
<% provide(:button_text, '講師新規登録') %>
<h1>講師登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user,url: create_teacher_path, local: true) do |f| %>
      <%= render 'shared/error_messages' %>
      
      <%= f.label :name, class: "label-signup" %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :tel, class: "label-signup" %>
      <%= f.text_field :tel, class: "form-control" %>
      
      <%= f.label :number, class: "label-signup" %>
      <%= f.text_field :number, class: "form-control" %>

      <%= f.label :password, class: "label-signup" %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, class: "label-signup" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
      
      <%= f.hidden_field :teacher, value: true, class: "label-signup" %>
      <%= f.hidden_field :school, value: "教師", class: "label-signup" %>
      <%= f.hidden_field :grade, value: 0, class: "label-signup" %>

      <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-signup" %>
    <% end %>
  </div>
</div>